{{!H friends.index}}
{{#link-to "friends.new" tagName='div'}}
	{{#paper-button}}{{paper-icon icon="person-add" primary="true" raised="true"}}
		  Add Friend ({{model.friends.length}} total) 
	{{/paper-button}}
{{/link-to}}

