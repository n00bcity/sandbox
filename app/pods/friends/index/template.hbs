</div-->

<table class="primary">
  <thead>
		<tr>
			<th>Name</th>
			<th class="ctr">Articles</th>
			<th colspan="2" class="ctr">Add articles / Delete</th>
    </tr>
  </thead>
	
	<tbody>
    {{#each model.friends as |friend|}}
			<tr>
				<td>{{link-to friend.fullName "articles" friend}}</td>
				<td class="ctr">{{friend.totalArticles}}</td>
				<td class="ctr">
					{{#link-to "articles.new" friend tagName='div'}}
						{{#paper-button}}{{paper-icon icon="note-add"}}{{/paper-button}}
					{{/link-to}}
				</td>
				<td>
					{{#paper-button action="delete" param=friend}}
						{{paper-icon icon="delete"}}
					{{/paper-button}}
				</td>
			</tr>
		{{/each}}
  </tbody>
</table>